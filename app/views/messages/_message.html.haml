.MessageBox
  .chat-main__message-list__messages
    .chat-main__message-list__messages__name
      = message.user.name
    .MessageInfo__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .Message
    - if message.content.present?
      %p.chat-main__message-list__messages__content
        = message.content
    = image_tag message.image.url, class: 'chat-main__message-list__messages__message-image' if message.image.present?